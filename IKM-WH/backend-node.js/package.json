{
  "name": "festival-backend",
  "version": "1.0.0",
  "description": "Backend API for Music Festival App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run mongodb:ensure && npm run server:dev",
    "dev:full": "concurrently \"npm run mongodb:start\" \"npm run server:dev:wait\"",
    "server:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "server:dev:wait": "wait-on tcp:27017 && ts-node-dev --respawn --transpile-only src/server.ts",
    "mongodb:start": "node scripts/start-mongodb.js",
    "mongodb:ensure": "node scripts/start-mongodb.js",
    "mongodb:check": "node -e \"require('net').createConnection(27017, 'localhost').on('connect', () => {console.log('✅ MongoDB доступен'); process.exit(0)}).on('error', () => {console.log('❌ MongoDB недоступен'); process.exit(1)})\"",
    "start:full": "npm run mongodb:ensure && npm run start",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=services",
    "create-test-user": "node scripts/create-test-user.js",
    "create-test-data": "node scripts/create-test-data.js",
    "setup-test": "npm run create-test-user && npm run create-test-data"
  },
  "keywords": [
    "festival",
    "music",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  }
}
